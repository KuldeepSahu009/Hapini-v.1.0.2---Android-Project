<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardCornerRadius="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTrackAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/trackadminname"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:padding="5dp"
                android:text="Satyam Kumar"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/trackadminprofilepic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="4dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/account"
                app:civ_border_color="#FFD600"
                app:civ_border_width="3dp"
                app:civ_circle_background_color="#FFD600" />

            <TextView
                android:id="@+id/adminbackemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trackadminname"
                android:padding="5dp"
                android:text="Email ID: "
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/trackadminemailid"
                android:layout_width="251dp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trackadminname"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@+id/trackadminprofilepic"
                android:layout_toEndOf="@+id/adminbackemail"
                android:text="abc@gamil.com"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adminbackphoneno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trackadminemailid"
                android:padding="5dp"
                android:text="Phone no: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/trackadminphoneno"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adminbackemail"
                android:layout_toEndOf="@+id/adminbackphoneno"
                android:text="+91 7878787878"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adminbackwhatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adminbackphoneno"
                android:padding="5dp"
                android:text="Whatsapp no: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/trackadminwhatsappno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_below="@id/adminbackphoneno"
                android:layout_toEndOf="@+id/adminbackwhatsapp"
                android:text="+91 67676767676"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adminbackpasscode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adminbackwhatsapp"
                android:padding="5dp"
                android:text="passcode: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/trackadminpasscode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adminbackwhatsapp"
                android:padding="5dp"
                android:layout_toEndOf="@+id/adminbackpasscode"
                android:text="787878"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adminbackpassowrd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adminbackpasscode"
                android:padding="5dp"
                android:text="Password: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/trackadminpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adminbackpasscode"
                android:layout_toEndOf="@+id/adminbackpassowrd"
                android:text="87jhh78"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adminbackstate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adminbackpassowrd"
                android:padding="5dp"
                android:text="State: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/trackadminstate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adminbackpassowrd"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:layout_toStartOf="@+id/trackadmindownload"
                android:layout_toEndOf="@id/adminbackstate"
                android:text="madhya pradesh"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adminbackcity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adminbackstate"
                android:padding="5dp"
                android:text="City: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/trackadmincity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adminbackstate"
                android:layout_marginStart="7dp"
                android:layout_marginTop="-1dp"
                android:layout_marginEnd="-7dp"
                android:layout_marginBottom="10dp"
                android:layout_toStartOf="@+id/trackadmindownload"
                android:layout_toEndOf="@id/adminbackcity"
                android:padding="5dp"
                android:text="Some place"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adminbacklocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adminbackcity"
                android:padding="5dp"
                android:text="Location||Pin Code: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/trackadminlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adminbackcity"
                android:layout_toEndOf="@id/adminbacklocation"
                android:padding="5dp"
                android:text="random,location"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/addedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trackadminlocation"
                android:layout_marginTop="2dp"
                android:padding="5dp"
                android:text="Added by: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/addedById"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trackadminlocation"
                android:layout_marginStart="0dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/addedBy"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="123456" />

            <ImageView
                android:id="@+id/trackadmincall"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_above="@+id/trackadmindownload"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="2dp"
                android:layout_marginEnd="50dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/ic_baseline_call_24" />

            <ImageView
                android:id="@+id/trackadminattendance"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_below="@+id/trackadmincall"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="90dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/ic_baseline_calendar_today_24" />


            <ImageView
                android:id="@+id/trackadmindownload"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_below="@id/adminbackpassowrd"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_baseline_arrow_downward_24" />

            <ImageView
                android:id="@+id/trackAdminStatus"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="165dp"
                android:layout_marginEnd="7dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/red_dot" />

            <ImageView
                android:id="@+id/trackadmindeleteprofile"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_below="@+id/adminbackpassowrd"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_baseline_delete_24" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/yellow" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#FFD600" />


</LinearLayout>
