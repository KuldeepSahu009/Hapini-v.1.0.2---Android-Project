<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/trackusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:text="Satyam Kumar"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/trackuserprofilepic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="4dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/account"
                app:civ_border_color="#FFD600"
                app:civ_border_width="3dp"
                app:civ_circle_background_color="#FFD600" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backemail"
                android:text="Email ID: "
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_below="@+id/trackusername"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trackuseremailid"
                android:text="abc@gamil.com"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_below="@+id/trackusername"
                android:layout_toRightOf="@+id/backemail"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backphoneno"
                android:text="Phone no: "
                android:textColor="@color/black"
                android:layout_below="@+id/backemail"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trackuserphoneno"
                android:text="+91 7878787878"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/backemail"
                android:layout_toRightOf="@+id/backphoneno"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backwhatsapp"
                android:textColor="@color/black"
                android:text="Whatsapp no: "
                android:layout_below="@+id/backphoneno"
                android:layout_marginLeft="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trackuserwhatsappno"
                android:text="+91 67676767676"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@id/backphoneno"
                android:layout_toRightOf="@+id/backwhatsapp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="passcode: "
                android:id="@+id/backpasscode"
                android:textColor="@color/black"
                android:layout_below="@+id/backwhatsapp"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="787878"
                android:id="@+id/trackuserpasscode"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/backwhatsapp"
                android:layout_toRightOf="@+id/backpasscode"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backpassowrd"
                android:text="Password: "
                android:textColor="@color/black"
                android:layout_below="@+id/backpasscode"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trackuserpassword"
                android:text="87jhh78"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/backpasscode"
                android:layout_toRightOf="@+id/backpassowrd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backlocation"
                android:text="Location: "
                android:layout_below="@+id/backpassowrd"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/trackuserdeleteprofile"
                android:text="random,location"
                android:id="@+id/trackuserlocation"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/backpassowrd"
                android:layout_toRightOf="@id/backlocation"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:layout_marginRight="4dp"
                android:id="@+id/trackuserdeleteprofile"
                android:layout_marginLeft="14dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_baseline_delete_24"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/backpassowrd"/>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/yellow"/>


</LinearLayout>