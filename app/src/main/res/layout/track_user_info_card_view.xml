<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/trackuserprofilepic"
                android:fontFamily="serif"
                android:padding="5dp"
                android:text="Satyam Kumar"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/trackuserprofilepic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="4dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/account"
                app:civ_border_color="#FFAB00"
                app:civ_border_width="3dp"
                app:civ_circle_background_color="#FFD600" />

            <TextView
                android:id="@+id/backemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCustomerName"
                android:padding="5dp"
                android:text="Email ID: "
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/trackuseremailid"
                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCustomerName"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/trackuserprofilepic"
                android:layout_toEndOf="@+id/backemail"
                android:padding="5dp"
                android:text="abc@gamil.com"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/backphoneno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backemail"
                android:padding="5dp"
                android:text="Phone no: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/trackuserphoneno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backemail"
                android:layout_toEndOf="@+id/backphoneno"
                android:padding="5dp"
                android:text="+91 7878787878"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/backwhatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backphoneno"
                android:padding="5dp"
                android:text="Whatsapp no: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/trackuserwhatsappno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/backphoneno"
                android:layout_toEndOf="@+id/backwhatsapp"
                android:text="+91 67676767676"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/backpasscode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backwhatsapp"
                android:padding="5dp"
                android:text="passcode: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/trackuserpasscode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backwhatsapp"
                android:layout_toEndOf="@+id/backpasscode"
                android:text="787878"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/backpassowrd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backpasscode"
                android:padding="5dp"
                android:text="Password: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/trackuserpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backpasscode"
                android:layout_toEndOf="@+id/backpassowrd"
                android:padding="5dp"
                android:text="87jhh78"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/backState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backpassowrd"
                android:padding="5dp"
                android:text="State :  "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/trackuserState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backpassowrd"
                android:layout_marginStart="-74dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/backlocation"
                android:padding="5dp"
                android:text="Madhya pradesh"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/backCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backState"
                android:padding="5dp"
                android:text="City : "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/trackuserCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backState"
                android:layout_marginStart="18dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="-17dp"
                android:layout_marginBottom="10dp"
                android:layout_toStartOf="@+id/trackuserdownload"
                android:layout_toEndOf="@id/backState"
                android:padding="5dp"
                android:text="Somewhere on earth"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/backlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backCity"
                android:padding="5dp"
                android:text="Location||Pin Code:"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/trackuserlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backCity"
                android:layout_marginStart="88dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="-111dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/backCity"
                android:padding="5dp"
                android:text="random,location"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/backAddedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backlocation"
                android:layout_marginTop="2dp"
                android:padding="5dp"
                android:text="Added By : "
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/trackUserAddedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backlocation"
                android:layout_marginStart="-45dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="55dp"
                android:layout_marginBottom="10dp"
                android:layout_toStartOf="@+id/trackuserdownload"
                android:layout_toEndOf="@id/backlocation"
                android:padding="5dp"
                android:text="admin name"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/trackUserStatus"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="9dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/red_dot" />

            <ImageView
                android:id="@+id/trackuserdeleteprofile"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="10dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/ic_baseline_delete_24" />
            <ImageView
                android:id="@+id/trackusercall"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginTop="120dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/ic_baseline_call_24" />

            <ImageView
                android:id="@+id/trackuserattendance"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="90dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/ic_baseline_calendar_today_24" />

            <ImageView
                android:id="@+id/trackuserdownload"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="50dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/ic_baseline_arrow_downward_24" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/yellow"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#FF6D00" />


</LinearLayout>